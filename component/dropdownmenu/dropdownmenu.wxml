<view class="nav">
  <view class="nav-child {{district_open? 'active' : ''}}" bindtap="tapDistrictNav" hidden='{{dropDownMenuDistrictData.length > 0 ? false :true}}' data-nav="1">
    <view class="nav-title">{{district_right_select_name.length > 0 ?district_right_select_name : dropDownMenuTitle[0]}}</view>
    <view class="icon"></view>
  </view>
  <view class="nav-child borders {{source_open? 'active' : ''}}" bindtap="tapSourceNav" hidden='{{dropDownMenuSourceData.length > 0 ? false : true}}' data-nav="2">
    <view class="nav-title">{{selected_source_name.length > 0 ?selected_source_name : dropDownMenuTitle[1]}}</view>
    <view class="icon"></view>
  </view>
  <view class="nav-child borders-right {{style_open? 'active' : ''}}" bindtap="tapStyleNav" hidden='{{dropDownMenuStyleData.length > 0 ? false : true}}' data-nav="3">
    <view class="nav-title">{{selected_style_name.length > 0 ?selected_style_name : dropDownMenuTitle[2]}}</view>
    <view class="icon"></view>
  </view>
  <view class="nav-child {{filter_open ? 'active' : ''}}" bindtap="tapFilterNav" hidden='{{dropDownMenuFilterData.length > 0 ? false : true}}' data-nav="4">
    <view class="nav-title">{{selected_filter_name.length > 0 ?selected_filter_name : dropDownMenuTitle[3]}}</view>
    <view class="icon"></view>
  </view>
</view>

<view class="district {{district_open ? 'show' : 'disappear'}} " bindtap="close">
  <view class="half half-left">
    <view class="{{district_left_select == item.id ? 'current_left_select' : ''}}" wx:for="{{dropDownMenuDistrictData}}" catchtap="selectDistrictLeft" data-model='{{item}}' wx:key="unique">
      {{item.title}}
    </view>
  </view>
  <view class="half half-right">
    <view class="{{district_right_select == item.id ? 'current_right_select' : ''}}" wx:for="{{dropDownMenuDistrictDataRight}}" catchtap="selectDistrictRight" data-model='{{item}}' wx:key="unique">
      {{item.title}}
    </view>
  </view>
</view>

<view class="container container_hd {{source_open ? 'show' : 'disappear'}} " bindtap="close">
  <view class='z-height'>
    <view>
      <block wx:for="{{dropDownMenuSourceData}}" wx:key="unique">
        <view class="sortitem {{selected_source_id==item.id ? ' active ' : ' '}}" data-model='{{item}}' catchtap='selectSourceItem'> {{item.title}}</view>
      </block>
    </view>
  </view>
</view>
<view class="container container_hd {{style_open ? 'show' : 'disappear'}} " bindtap="close">
  <view class='z-height'>
    <view>
      <block wx:for="{{dropDownMenuStyleData}}" wx:key="unique">
        <view class="sortitem {{selected_style_id==item.id ? ' active ' : ' '}}" data-model='{{item}}' catchtap='selectStyleItem'> {{item.title}}</view>
      </block>
    </view>
  </view>
</view>
<view class="container container_hd {{filter_open ? 'show' : 'disappear'}} ">
  <view class='z-height'>
    <view>
      <block>
        <view class="sortitem" catchtap='selectFilterItem'> 
            <view class="h2">{{dropDownMenuFilterData[0].title}}</view> 
            <view class="zll">
              <view wx:for="{{dropDownMenuFilterData[0].selectbox}}" wx:for-item="list" class="moreselect {{selec_diy1 == list.selectid ? 'cur' : ''}}" data-model='{{list.selectid}}' catchtap="moreselect('1')">{{list.selectname}}</view>
            </view>
        </view>
        <view class="sortitem" catchtap='selectFilterItem'> 
            <view class="h2">{{dropDownMenuFilterData[1].title}}</view> 
            <view class="zll">
              <view wx:for="{{dropDownMenuFilterData[1].selectbox}}" wx:for-item="list" class="moreselect" data-model='{{list.selectid}}' >{{list.selectname}}</view>
            </view>
        </view>
        <view class="sortitem" catchtap='selectFilterItem'> 
            <view class="h2">{{dropDownMenuFilterData[2].title}}</view> 
            <view class="zll">
              <view wx:for="{{dropDownMenuFilterData[2].selectbox}}" wx:for-item="list" class="moreselect" data-model='{{list.selectid}}' >{{list.selectname}}</view>
            </view>
        </view>
        <view class="sortitem" catchtap='selectFilterItem'> 
            <view class="h2">{{dropDownMenuFilterData[3].title}}</view> 
            <view class="zll">
              <view wx:for="{{dropDownMenuFilterData[3].selectbox}}" wx:for-item="list" class="moreselect" data-model='{{list.selectid}}' >{{list.selectname}}</view>
            </view>
        </view>
      </block>
      <view class="selectbtn">
        <button size="default" bindtap="ag">重置</button>
        <button type="primary" size="default">确定</button>
      </view>
    </view>
  </view>
</view>