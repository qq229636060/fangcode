.house_info_text{padding: 0 40rpx; margin-top:35rpx; position: relative; border-bottom: solid 1rpx #EEEEEE; padding-bottom: 30rpx;}
.housename{font-size: 40rpx; display: flex; display: -webkit-flex; align-items: center;}
.housename image{ width: 63rpx; margin-left: 10rpx;}
.house_txt{font-size: 28rpx; color: #999; display: flex; display: -webkit-flex;align-items: center; margin-bottom: 5rpx;}
.house_txt .house_txt{font-size: 28rpx; color: #666;}
.moneyred{ color: #FF3831; display: flex; align-items: center;}
.moneyred view{font-size: 38rpx;}
.smap{width: 35rpx; height: 33rpx; margin-left: 10rpx;}
.adder{
  max-width: 500rpx;
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
  -o-text-overflow:ellipsis;
  -webkit-text-overflow:ellipsis;
}
.house_tag{ margin-top:10rpx;}
.house_tag text{ font-size: 22rpx; height: 36rpx; line-height: 36rpx; color: #8099AF; border: solid 1rpx #E0EBF4; padding:0 20rpx; display: inline-block; margin-right: 10rpx;}
.noneline{border: none;}
.lines{background: #F8F8F8;height: 20rpx; width: 100%;}
/*点评*/
.dp_list{ padding: 0 40rpx;}
.dp_box{ border-bottom: solid 1rpx #eee; padding: 40rpx 0; display: flex; display: -webkit-flex;}
.dp_box_l { width: 60rpx;}
.dp_box_l image{ width: 60rpx; height: 60rpx; border-radius: 50%;}
.dp_box_r { width: 560rpx; margin-left: 20rpx;}
.dp_box_r .use_name{font-size: 28rpx;margin-top: 10rpx;}
.dp_box_r .use_cont{font-size: 28rpx; color: #666;margin-top: 10rpx;}
.dp_box_r .use_time{font-size: 22rpx; color: #999;margin-top: 10rpx;}
.z_btn{ border:none;  bottom: 0px; width: 100%; height: 100rpx; background: #27CDA1; color: #fff; text-align: center; line-height: 100rpx; position: fixed; z-index: 9999;}