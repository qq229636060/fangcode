/* pages/newhouse/houseinfo.wxss */
.housepic{ width: 750rpx; height: 475rpx; overflow: hidden; position: relative;}
.page-section,.page-section swiper{ width: 750rpx; height: 475rpx;}
.swiper-item{ width: 750rpx; height: 475rpx; overflow: hidden; }
.swiper-item image{ width: 100%; height: 100%;}
.picnumber{ width: 120rpx;height: 42rpx; background:rgba(0,0,0,1); border-radius: 21rpx; color: #fff; text-align: center; line-height: 42rpx; font-size: 24rpx; position: absolute; bottom: 30rpx; left: 30rpx; z-index: 1000;}
.house_info_text{padding: 0 40rpx; margin-top:35rpx; position: relative; border-bottom: solid 1rpx #EEEEEE; padding-bottom: 30rpx;}
.housename{font-size: 40rpx; display: flex; display: -webkit-flex; align-items: center;}
.housename image{ width: 63rpx; margin-left: 10rpx;}
.house_txt{font-size: 28rpx; color: #999; display: flex; display: -webkit-flex;align-items: center; margin-bottom: 5rpx;}
.house_txt .house_txt{font-size: 28rpx; color: #666;}
.moneyred{ color: #FF3831; display: flex; align-items: center;}
.moneyred view{font-size: 38rpx;}
.smap{width: 35rpx; height: 33rpx; margin-left: 10rpx;}
.adder{
  max-width: 500rpx;
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
  -o-text-overflow:ellipsis;
  -webkit-text-overflow:ellipsis;
}
.house_tag{ margin-top:10rpx;}
.house_tag text{ font-size: 22rpx; height: 36rpx; line-height: 36rpx; color: #8099AF; border: solid 1rpx #E0EBF4; padding:0 20rpx; display: inline-block; margin-right: 10rpx;}
.jsq{ font-size: 24rpx; color: #fff; text-align: center; width: 160rpx; height: 42rpx; background: #29C19C; border-radius: 21rpx;line-height: 42rpx; position: absolute; right: 20rpx;
top:5rpx;}
.morebtn{ width: 670rpx; height: 76rpx; text-align: center; line-height: 76rpx; background: #F7F8FA; font-size: 28rpx; color: #8099AF; margin-top:30rpx;}
.notice{ display: flex; display: -webkit-flex; margin-top: 30rpx;}
.notice text{ text-align: center; width: 50%; font-size: 28rpx; color: #8099AF;}