<van-tabs active="a" border='false' color="#27CDA1">
  <van-tab title="商业贷款" name="a">
      <view class="z_gcell">
       <view class="z_cell">
           <view class="z_cell_l">贷款金额</view>
           <view class="z_cell_r">
              <input type="number" bindinput="bindinput_money"></input>万
           </view>
       </view>
       <view class="z_cell">
           <view class="z_cell_l">贷款年限</view>
           <view class="z_cell_r">
              <picker bindchange="bindpicker_year" value="{{year_index}}" range="{{year_array}}" range-key="year">
                <view class="picker">
                 {{year_array[year_index].year}}年
                </view>
              </picker>
              <van-icon name="arrow" />
           </view>
       </view>
       <view class="z_cell">
           <view class="z_cell_l">商业利率</view>
           <view class="z_cell_r">
            <picker bindchange="bindpicker_shangdaiSelect" value="{{shangdai_index}}" range="{{shangdai_array}}" range-key="name">
                <view class="picker">
                 {{shangdai_array[shangdai_index].name}}
                </view>
              </picker>
               <van-icon name="arrow" />
           </view>
       </view>
      </view>
      <view class="z_btn" bindtap="goto">确定</view>
  </van-tab>
