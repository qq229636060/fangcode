            <picker bindchange="bindpicker_shangdaiSelect" value="{{gjjdai_index}}" range="{{gjjdai_array}}" range-key="name">
                <view class="picker">
                 {{gjjdai_array[gjjdai_index].name}}
                </view>
              </picker>
