<!--pages/use/focus.wxml-->
 <view class="lplist" wx:if="{{list.length != 0}}">
          <view class="lpbox flex-wrp" wx:for="{{list}}" wx:key="*this" bindtap="gotocont" >
            <image src="{{item.cover2}}"></image>
            <view class="lpmsg">
                <view class="lpname">
                <view class="house_type">{{item.status_name}}</view>{{item.name}}</view>
                <view class="lp_txt">{{item.area_name}} | {{item.mj}}</view>
                <view class="lp_money"><i>{{item.price}}</i>{{item.unit}}</view>
                <view class="lp_tag"><i wx:for="{{item.tabs}}" wx:key="*this">{{item}}</i></view>
            </view>
          </view>
      </view>
<view wx:else class="nones">
              <image src="../../img/none.png" mode="aspectFit"></image>
              <view>暂无关注</view>
</view>